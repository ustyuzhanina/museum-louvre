{
  "trailingComma": "es5",
  "tabWidth": 2,
  "semi": false,
  "proseWrap": "always",
  "printWidth": 80,
  "arrowParens": "avoid",
  "endOfLine": "lf",
  "bracketSpacing": true,
  "requirePragma": false,
  "embeddedLanguageFormatting": "auto",
  "overrides": [
    {
      "files": "*.json",
      "options": {
        "singleQuote": false
      }
    },
    {
      "files": "*.html",
      "options": {
        "parser": "html",
        "tabWidth": 4,
        "singleQuote": false
      }
    },
    {
      "files": "*.css",
      "options": {
        "parser": "css",
        "singleQuote": false
      }
    },
    {
      "files": "*.scss",
      "options": {
        "parser": "css",
        "singleQuote": false
      }
    },
    {
      "files": [".prettierrc", ".eslintrc.json"],
      "options": { "parser": "json" }
    }
  ]
}
