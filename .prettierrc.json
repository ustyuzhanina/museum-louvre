{
    "trailingComma": "all",
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true,
    "proseWrap": "always",
    "printWidth": 100,
    "arrowParens": "avoid",
    "endOfLine": "lf",
    "bracketSpacing": true,
    "requirePragma": false,
    "embeddedLanguageFormatting": "auto",
    "overrides": [{
            "files": "*.json",
            "options": {
                "singleQuote": false
            }
        },
        {
            "files": "*.html",
            "options": {
                "parser": "html",
                "tabWidth": 4,
                "singleQuote": false
            }
        },
        {
            "files": "*.css",
            "options": {
                "parser": "css",
                "singleQuote": false
            }
        },
        {
            "files": "*.scss",
            "options": {
                "parser": "css",
                "singleQuote": false
            }
        },
        {
            "files": [".prettierrc", ".eslintrc.json"],
            "options": {
                "parser": "json"
            }
        }
    ]
}
